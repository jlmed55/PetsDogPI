@model PetsDog.Models.ViewModels.AgendamentoFormViewModel

@{
    ViewData["Title"] = "Novo Agendamento";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Novo Agendamento</h1>
        <p class="subtitle">Crie um agendamento com a experiência renovada em azul vibrante.</p>
    </div>
</div>

<div class="card-panel">
    <form asp-action="Create" method="post" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-4">
            <label asp-for="Agendamento.AnimalId" class="form-label">Animal</label>
            <select asp-for="Agendamento.AnimalId" asp-items="Model.Animais" class="form-select">
                <option value="">Selecione um animal</option>
            </select>
            <span asp-validation-for="Agendamento.AnimalId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Agendamento.ServicoId" class="form-label">Serviço</label>
            <select asp-for="Agendamento.ServicoId" asp-items="Model.Servicos" class="form-select">
                <option value="">Selecione um serviço</option>
            </select>
            <span asp-validation-for="Agendamento.ServicoId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Agendamento.ProfissionalId" class="form-label">Profissional</label>
            <select asp-for="Agendamento.ProfissionalId" asp-items="Model.Profissionais" class="form-select">
                <option value="">Selecione um profissional</option>
            </select>
            <span asp-validation-for="Agendamento.ProfissionalId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Agendamento.DataHora" class="form-label"></label>
            <input asp-for="Agendamento.DataHora" class="form-control" type="datetime-local" value="@Model.Agendamento.DataHora.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="Agendamento.DataHora" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Agendamento.Status" class="form-label"></label>
            <input asp-for="Agendamento.Status" class="form-control" />
            <span asp-validation-for="Agendamento.Status" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
