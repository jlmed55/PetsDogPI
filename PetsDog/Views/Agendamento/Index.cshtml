@using System.Linq
@model IEnumerable<PetsDog.Models.Agendamento>

@{
    ViewData["Title"] = "Agendamentos";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Agendamentos</h1>
        <p class="subtitle">Visualize e gerencie os agendamentos com a nova interface em tons de azul.</p>
    </div>
    <div class="action-bar">
        <a class="btn btn-primary" asp-action="Create">Novo agendamento</a>
    </div>
</div>

<div class="card-panel">
    @if (!Model.Any())
    {
        <div class="alert alert-info mb-0">Nenhum agendamento cadastrado.</div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Animal</th>
                    <th>Serviço</th>
                    <th>Profissional</th>
                    <th>Data e Hora</th>
                    <th>Status</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AnimalId</td>
                    <td>@item.ServicoId</td>
                    <td>@item.ProfissionalId</td>
                    <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <span class="badge-soft">@(string.IsNullOrWhiteSpace(item.Status) ? "Sem status" : item.Status)</span>
                    </td>
                    <td class="text-end">
                        <div class="action-bar justify-content-end">
                            <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
