@model PetsDog.Models.Agendamento

@{
    ViewData["Title"] = "Editar Agendamento";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Editar Agendamento</h1>
        <p class="subtitle">Ajuste os dados mantendo a paleta azul intensa em destaque.</p>
    </div>
</div>

<div class="card-panel">
    <form asp-action="Edit" method="post" class="row g-3">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-4">
            <label asp-for="AnimalId" class="form-label"></label>
            <input asp-for="AnimalId" class="form-control" />
            <span asp-validation-for="AnimalId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="ServicoId" class="form-label"></label>
            <input asp-for="ServicoId" class="form-control" />
            <span asp-validation-for="ServicoId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="ProfissionalId" class="form-label"></label>
            <input asp-for="ProfissionalId" class="form-control" />
            <span asp-validation-for="ProfissionalId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DataHora" class="form-label"></label>
            <input asp-for="DataHora" class="form-control" type="datetime-local" value="@Model.DataHora.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="DataHora" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Status" class="form-label"></label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
