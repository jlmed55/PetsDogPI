@model PetsDog.Models.Servico
@{
    ViewData["Title"] = "Excluir Serviço";
}

<div class="page-header">
    <div>
        <h1 class="page-title text-danger">Excluir Serviço</h1>
        <p class="subtitle">Confirme a remoção definitiva deste serviço.</p>
    </div>
</div>

<div class="card-panel">
    <div class="alert alert-warning">Esta ação não pode ser desfeita. Verifique os dados antes de confirmar.</div>

    <dl class="row mb-4">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">Duração (min)</dt>
        <dd class="col-sm-9">@Model.DuracaoMin</dd>

        <dt class="col-sm-3">Preço</dt>
        <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="Idservico" />
        <button type="submit" class="btn btn-danger">Confirmar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
    </form>
</div>
