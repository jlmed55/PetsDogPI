@model PetsDog.Models.Animal

@{
    ViewData["Title"] = "Novo Animal";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Cadastrar Animal</h1>
        <p class="subtitle">Inclua os dados do pet para vincul√°-lo ao cliente.</p>
    </div>
</div>

<div class="card-panel">
    <form asp-action="Create" method="post" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-6">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Especie" class="form-label"></label>
            <input asp-for="Especie" class="form-control" />
            <span asp-validation-for="Especie" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Porte" class="form-label"></label>
            <input asp-for="Porte" class="form-control" />
            <span asp-validation-for="Porte" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Idade" class="form-label"></label>
            <input asp-for="Idade" class="form-control" type="number" min="0" />
            <span asp-validation-for="Idade" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Id_cliente" class="form-label">Cliente</label>
            <select asp-for="Id_cliente" asp-items="ViewBag.Clientes" class="form-select">
                <option value="">Selecione um cliente</option>
            </select>
            <span asp-validation-for="Id_cliente" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
