@model IEnumerable<PetsDog.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Clientes</h1>
        <p class="subtitle">Gerencie os responsáveis pelos pets para organizar os agendamentos.</p>
    </div>
    <div class="action-bar">
        <a class="btn btn-primary" asp-action="Create">Cadastrar cliente</a>
    </div>
</div>

<div class="card-panel">
    @if (!Model.Any())
    {
        <div class="alert alert-info mb-0">Nenhum cliente cadastrado.</div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Cadastro</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td class="fw-semibold">@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefone</td>
                    <td>@cliente.Datacadastro.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <div class="action-bar justify-content-end">
                            <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@cliente.Idcliente">Editar</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@cliente.Idcliente">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
